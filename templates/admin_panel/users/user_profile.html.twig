{% extends 'admin_panel/base_admin_panel.html.twig' %}

{% block body %}
    Username: {{ user.username }} <br>
    Role: {{ user.roles[0] }} <br>
    {% if user.roles[0] == 'ROLE_USER' %}
        Group: {{ group }}
    {% elseif user.roles[0] == 'ROLE_TEACHER' %}
        Subjects:
        {% for subject in subjects %}
            {{ subject }} |
        {% endfor %}
    {% endif %}
{% endblock %}